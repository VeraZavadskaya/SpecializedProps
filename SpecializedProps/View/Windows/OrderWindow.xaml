<Window x:Class="SpecializedProps.View.Windows.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpecializedProps.View.Windows"
        mc:Ignorable="d"
        Title="Создание заказа" SizeToContent="Height" Width="800">
    <Grid Background="#7F7F7F">
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="10" />
            <RowDefinition Height="25" />
            <RowDefinition Height="10" />
            <RowDefinition Height="45" />
            <RowDefinition Height="10" />
            <RowDefinition Height="300" />
            <RowDefinition Height="10" />
            <RowDefinition Height="25" />
            <RowDefinition Height="10" />
            <RowDefinition Height="25" />
            <RowDefinition Height="10" />
            <RowDefinition Height="65" />
            <RowDefinition Height="10" />
            <RowDefinition Height="40" />
            <RowDefinition Height="10" />
            <RowDefinition Height="25" />
            <RowDefinition Height="10" />
            <RowDefinition Height="25" />
            <RowDefinition Height="10" />
            <RowDefinition Height="25" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="Заказ" VerticalAlignment="Center" Margin="20 0 0 0" FontWeight="Bold"/>
        <TextBlock Text="Заказчик" Grid.Row="2" Margin="15 0 0 0"/>
        <TextBlock Text="Материалы" Grid.Row="4" Margin="15 0 0 0" VerticalAlignment="Top"/>
        <TextBlock Text="Эскизы" Grid.Row="8" Margin="15 0 0 0"/>
        <TextBlock Text="Сроки изготовления" Grid.Row="10" Margin="15 0 0 0"/>
        <TextBlock Text="Описание:" Grid.Row="12" Margin="15 0 0 0" VerticalAlignment="Top"/>
        <TextBlock Text="Комментарии:" Grid.Row="14" Margin="15 0 0 0" VerticalAlignment="Top"/>
        <TextBlock Text="Способ оплаты:" Grid.Row="20" Margin="15 0 0 0"/>
        <TextBlock Text="Сумма:" Grid.Row="22" Margin="15 0 0 0"/>
        <ComboBox Name="NameCustomerCmb" Grid.Column="2" Grid.Row="2" Width="240" HorizontalAlignment="Left"/>
        <Button Name="AddCustomerBtn" Content="+" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Right" Width="50" Click="AddCustomerBtn_Click"/>
        <ComboBox Name="MaterialCmb" Grid.Column="2" Grid.ColumnSpan="3" Grid.Row="4" Margin="0 0 15 0 " SelectionChanged="MaterialCmb_SelectionChanged"/>
        <ListBox Name="SelectedMaterialsLb" Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="3" SelectionChanged="SelectedMaterialsLb_SelectionChanged" Margin="0 0 15 0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Name="HyperlinkSketchTb" Grid.Column="2" Grid.Row="8" Content="Найти" Click="HyperlinkSketchTb_Click"/>
        <TextBox Name="ProductionDateTb" Grid.Column="2" Grid.Row="10"/>
        <TextBox Name="EndDatetb" Grid.Column="4" Grid.Row="10" Margin="0 0 15 0"/>
        <TextBox Name="DirectionTb" Grid.Column="2" Grid.ColumnSpan="3" Grid.Row="12" Margin="0 0 15 0"/>
        <TextBox Name="CommentTb" Grid.Column="2" Grid.ColumnSpan="3" Grid.Row="14" Margin="0 0 15 0"/>
        <RadioButton GroupName="DeliveryRb" Content="Доставка" Grid.Row="16" Height="20" Width="20" HorizontalAlignment="Left" Checked="DeliveryCb_Checked" Unchecked="DeliveryCb_Unchecked"/>
        <RadioButton GroupName="DeliveryRb" Content="Самовывоз" Grid.Row="18" Height="20"  HorizontalAlignment="Left" Checked="DeliveryCb_Checked" Unchecked="DeliveryCb_Unchecked"/>
        <ComboBox Name="PaymentCmb" Grid.Column="2" Grid.Row="20"/>
        <TextBox Name="SummTb" Grid.Column="2" Grid.Row="22"/>
        <TextBlock Name="ImagePathTbl" Text="Путь к файлу" Grid.Column="4" Grid.Row="8"/>
        <TextBlock Text="Адрес:" Grid.Column="2" Grid.Row="16"/>
        <TextBox Name="AdressDeliveryTb" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="16" Margin="100 0 0 0" IsEnabled="False"/>
        <TextBlock Text="Филиал:" Grid.Row="18" Grid.Column="2"/>
        <ComboBox Name="PickUpCmb" Grid.Row="18" Grid.Column="2" Grid.ColumnSpan="2" Margin="100 0 0 0" IsEnabled="False"/>
        <Button Name="AddOrderBtn" Content="Добавить" Grid.Column="4" Grid.Row="20" Grid.RowSpan="3" Width="150" Height="50" Click="AddOrderBtn_Click"/>
    </Grid>
</Window>
